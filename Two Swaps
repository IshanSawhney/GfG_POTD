class Solution {
  public:
    bool checkSorted(vector<int> &arr) {
        // CodeGenius
        int n=arr.size();
        if(n<=3) return true;
        int sorted=0;
        int unsorted=0;
        for(int i=1;i<n;i++){
            if(arr[i]<arr[i-1]) unsorted++;
            else sorted++;
        }
        if(n==4 && sorted==1 && unsorted ==2 ) return false;
        if(n<=5 && sorted==0 && unsorted <=4 ) return true;

        if(unsorted<=2) return true;
        return false;
    }
};
