//C++ CODE
class Solution {
  public:
    int height(Node* node) {
        // CodeGenius
        // base case
        if(!node) return -1;
        //recursive case;
        return max(height(node ->left),height(node ->right)) + 1;
        
    }
};
//JAVA CODE
class Solution {
    int height(Node node) {
        // CodeGenius
         if(node == null) return -1;
        else return Math.max(height(node.left), height(node.right)) + 1;
    }
}
