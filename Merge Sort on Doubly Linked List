// Step 1 : Middle element find krna hai
// Step 2 : reccursively divide krte rhna hai
// Step 3 : sort and merge recursion use hoga

class Solution {
  public:
    
    // Middle find krne ke liye function
    Node* getMiddle(Node*head){
        if(!head || !head->next) return head;
        Node* slow=head;
        Node* fast=head->next;
        while(fast && fast->next){
            slow=slow->next;
            fast=fast->next->next;
        }
        return slow;
        
    }
    
    Node*merge(Node*left,Node*right){
        if(!left) return right;
        if(!right) return left;
        
        //left or right jo smaller ho use choose krlo
        if(left->data < right->data){
            left->next=merge(left->next,right);
            left->next->prev=left;
            left->prev=NULL;
            return left;
        }
        else{
            right->next=merge(left,right->next);
            right->next->prev=right;
            right->prev=NULL;
            return right;
            
        }
    }
    
    
    struct Node *sortDoubly(struct Node *head) {
        // Your code here
        if(!head || !head->next) return head;
        
        Node* mid=getMiddle(head);
        Node* nextToMid = mid->next;
        // do bhago me divide krdo
        mid->next=NULL;
        nextToMid->prev=NULL;
        Node*left=sortDoubly(head);
        Node*right=sortDoubly(nextToMid);
        return merge(left,right);
        
    }
};
