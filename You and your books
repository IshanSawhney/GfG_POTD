class Solution {
  public:
    /*You are requried to complete this method */
    long long max_Books(int arr[], int n, int k) {
        // Your code here
        long long count=0;
        long long ans=0;
        for(int i=0;i<n;i++){
            if(arr[i]<=k){
                count+=arr[i];
            }
            else{
                count=0;
            }
            ans=max(count,ans);
        }
        return ans;
    }
};
