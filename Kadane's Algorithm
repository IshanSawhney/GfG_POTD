class Solution {
  public:
    
    long long maxSubarraySum(vector<int> &arr) {
        //CodeGenius
        long long sum=0;
        long long maxi=arr[0];
        for(int i=0;i<arr.size();i++){
            sum+=arr[i];
            maxi=max(sum,maxi);
            if(sum<0) sum=0;
        }
        return maxi;
    }
};
